{{!
    @template theme_degrade/core_admin/setting_configrange

    Admin range setting template.

    Example context (json):
    {
        "name": "test",
        "id": "test0",
        "value": 23,
        "min": 0,
        "max": 100
    }
}}
{{!
    Setting configtext.
}}
<div class="form-text defaultsnext">
    <input type="range"
           style="width:300px;"
           name="{{name}}"
           id="{{id}}"
           min="{{min}}"
           max="{{max}}"
           value="{{value}}"
           step="1" >
</div>
