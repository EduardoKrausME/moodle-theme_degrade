{{!
    @template local_degrade/core_course/cardhome

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "enrolment_icons": []
            }
        ]
    }
}}

<div class="col d-flex px-0 mb-2">
    <div class="card course-card mx-1"
         role="listitem" data-region="course-content" data-course-id="{{{courseid}}}">
        <a href="{{{viewurl}}}" tabindex="-1">
            <div class="card-img-top">
                <div class="background-image"
                     style="background-image: url('{{{courseimage}}}');"></div>
            </div>
        </a>
        <div class="card-body pe-1 course-info-container pt-2" id="course-info-container-{{{courseid}}}-3">
            <div class="d-flex align-items-start">
                <div class="w-100 text-truncate">
                    <a href="{{{viewurl}}}"
                       class="aalink coursename me-2 mb-1">
                        <span class="sr-only">{{{fullname}}}</span>
                        {{#shortentext}}55, {{{fullname}}} {{/shortentext}}
                    </a>
                </div>
            </div>
        </div>
        {{#has_enrolment_icons}}
            <div class="d-flex align-items-start">
                {{#enrolment_icons}}
                    {{{.}}}
                {{/enrolment_icons}}
            </div>
        {{/has_enrolment_icons}}
    </div>
</div>
