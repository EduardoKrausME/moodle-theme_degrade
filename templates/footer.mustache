{{!
    @template theme_degrade/footer

    Page footer.

    Example context (json):
    {
    }
}}

<footer id="page-footer">
    <style>
        footer {
            background: {{{footer_background_color}}};
        }
        footer * {
            color: {{{footer_background_text_color}}};
        }
    </style>
    {{#footercount}}
        <div class="footer-container footer-container-{{{footercount}}} container">
            {{#footercontents}}
                <div class="footer-section-wrapper">
                    {{#footertitle}}
                        <h6 class="footer-title">{{{footertitle}}}</h6>
                    {{/footertitle}}
                    {{{footerhtml}}}
                </div>
            {{/footercontents}}
        </div>
    {{/footercount}}
    {{#footer_show_copywriter}}
        <div class="footer-foot">
            <div class="container">
                <p class="text-center text-white">
                    {{#str}}footer_copywriter,theme_degrade{{/str}}
                    <a href="https://eduardokraus.com" target="_blank" class="text-white">Eduardo Kraus</a> -
                    Powered by <a href="https://moodle.org" target="_blank" class="text-white">Moodle</a>
                </p>
            </div>
        </div>
    {{/footer_show_copywriter}}
    {{#editing}}
        <p class="text-center">
            <a href="{{{config.wwwroot}}}/theme/degrade/quickstart/"
               class="btn text-white">{{#str}}quickstart_title,theme_degrade{{/str}}</a>
        </p>
    {{/editing}}
    <div class="footer-content-debugging footer-dark bg-dark text-light d-none">
        <div class="container-fluid footer-dark-inner">
            {{{ output.debug_footer_html }}}
            {{{ output.standard_footer_html }}}
        </div>
    </div>
</footer>

{{{ output.standard_end_of_body_html }}}
