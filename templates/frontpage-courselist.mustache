{{!
    @template theme_degrade/frontpage-courselist

    This template renders the main content area for the myoverview block.

    Example context (json):
    {
      "root_class": "featured-courses",
      "title": "Available Courses",
      "add_new_course_button": "<button class='btn btn-primary'>Add New Course</button>",
      "text": "Explore the following courses to advance your knowledge.",
      "courses": [
        {
          "id": "course1",
          "name": "Introduction to Programming",
          "description": "Learn the basics of programming in various languages.",
          "image": "programming.jpg",
          "enrollment_link": "/course/enroll/1"
        }
      ]
    }
}}

<div class="frontpage-course-list {{root_class}}">
    <div class="container-fluid">
        <h2 class="frontpage-course-title">{{title}}
            {{{add_new_course_button}}}
        </h2>
        {{#text}}
            <p class="frontpage-course-description">{{text}}</p>
        {{/text}}
        <div class="courses course-boxes">
            <div class="row">
                {{#courses}}
                    {{> theme_degrade/frontpage-course}}
                {{/courses}}
            </div>
        </div>
    </div>
</div>