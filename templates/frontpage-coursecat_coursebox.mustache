{{!
    @template theme_degrade/frontpage-coursecat_coursebox

    This template renders the main content area for the myoverview block.

    Example context (json):
    {
      "viewurl": "/course/view.php?id=10",
      "courseimage": "https://example.com/images/course-image.jpg",
      "fullname": "Advanced Python Programming",
      "is_enrolled": false,
      "countlessons": 25,
      "instructor": {
        "instructorname": "Jane Doe",
        "instructortitle": "Lead Python Developer",
        "instructorurl": "https://example.com/images/instructor-avatar.jpg"
      }
    }

}}

<div class="course-box">
    <div class="frontpage-coursecat_coursebox d-flex">
        <div class="course-item">
            <div class="course-item-img">
                <a href="{{viewurl}}" style="background-image: url('{{courseimage}}')">&nbsp;</a>
            </div>
            <div class="course-content">
                <div class="course-title-group">
                    <h3>
                        <a href="{{viewurl}}">{{fullname}}</a>
                    </h3>
                    {{^is_enrolled}}
                        <!--a href="{{viewurl}}" class="btn btn-primary">BUY NOW</a-->
                    {{/is_enrolled}}
                </div>
                <div class="course-info border-bottom-0 pb-0 d-flex align-items-center">
                    <div class="lesson-group d-flex align-items-center">
                        {{#pix}}lessons, theme_degrade{{/pix}}
                        <p>{{countlessons}}</p>
                    </div>

                </div>

                <div class="instructor-group d-flex">
                    {{#instructor}}
                        <div class="instructor-group-img d-flex">
                            <a href="#">
                                <img alt="{{instructorname}}" src="{{instructorurl}}"
                                     class="avatar avatar-50 photo" height="50" width="50">
                            </a>
                            <div class="instructor-name">
                                <h4><a href="#">{{instructorname}}</a></h4>
                                <p>{{instructortitle}}</p>
                            </div>
                        </div>
                    {{/instructor}}
                </div>
            </div>
        </div>
    </div>
</div>
