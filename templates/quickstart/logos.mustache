{{!
    @template theme_degrade/quickstart/logos

    Example context (json):
    {
        "return":  "courses",
        "next":  "user-profile",
        "logocompact_url":  "https://....",
        "logocompact_extensions":  "PNG, SVG, JPG",
        "favicon_url":  "https://....",
        "favicon_extensions":  "PNG, SVG, JPG"
    }
}}

<div class="quickstart-collapse" id="logos">
    <a href="#logos" style="background: linear-gradient(90deg, #556270 0%, #ff6b6b 100%);">
        <span class="material-icons">collections</span>
        <span>{{#str}}logossettings,admin{{/str}}</span>
    </a>
    <div class="content">
        <div class="inner-content">
            <div class="settings-content">

                <div class="card mb-3">
                    <div class="card-header">
                        <h5>{{#str}}logocompact, admin{{/str}}</h5></div>
                    <div class="card-body">
                        {{#logocompact_url}}
                            <div class="mb-3 text-center">
                                <img src="{{{logocompact_url}}}" alt="Logo atual" style="max-width:300px;max-height:100px;">
                            </div>
                        {{/logocompact_url}}
                        <div class="mb-3">
                            <input class="form-control" type="file" name="logocompact"
                                   accept=".png,.jpg,.svg,.jpeg">
                            <div class="form-text text-muted">
                                {{#str}}logocompact_desc, admin{{/str}} <br><br>
                                {{#str}}imageacceptedtypes, theme_degrade, {{{logocompact_extensions}}}{{/str}}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h5>{{#str}}favicon, theme_degrade{{/str}}</h5></div>
                    <div class="card-body">
                        {{#favicon_url}}
                            <div class="mb-3 text-center">
                                <img src="{{{favicon_url}}}" alt="Logo atual" style="max-width:300px;max-height:100px;">
                            </div>
                        {{/favicon_url}}
                        <div class="mb-3">
                            <input class="form-control" type="file" name="favicon"
                                   accept=".png,.jpg,.ico,.jpeg">
                            <div class="form-text text-muted">
                                {{#str}}favicon_desc, theme_degrade{{/str}} <br><br>
                                {{#str}}imageacceptedtypes, theme_degrade, {{{favicon_extensions}}}{{/str}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {{> theme_degrade/quickstart/btn-next-back }}
        </div>
    </div>
</div>